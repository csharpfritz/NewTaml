{
  "name": "taml",
  "displayName": "TAML - Tab Accessible Markup Language",
  "description": "Syntax highlighting for TAML (Tab Accessible Markup Language) files",
  "version": "0.1.0",
  "publisher": "taml-lang",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "taml",
    "tab",
    "markup",
    "config",
    "configuration",
    "accessibility"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-repo/taml"
  },
  "license": "MIT",
  "contributes": {
    "languages": [
      {
        "id": "taml",
        "aliases": [
          "TAML",
          "taml",
          "Tab Accessible Markup Language"
        ],
        "extensions": [
          ".taml"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "taml",
        "scopeName": "source.taml",
        "path": "./syntaxes/taml.tmLanguage.json"
      }
    ],
    "configurationDefaults": {
      "[taml]": {
        "editor.insertSpaces": false,
        "editor.detectIndentation": false,
        "editor.tabSize": 1
      }
    }
  },
  "scripts": {
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "vsce": "^2.15.0"
  }
}
