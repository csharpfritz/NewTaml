{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "TAML",
  "scopeName": "source.taml",
  "fileTypes": ["taml"],
  "patterns": [
    {
      "include": "#comment"
    },
    {
      "include": "#key-value-pair"
    },
    {
      "include": "#parent-key"
    },
    {
      "include": "#list-item"
    }
  ],
  "repository": {
    "comment": {
      "name": "comment.line.number-sign.taml",
      "match": "^\\s*#.*$"
    },
    "key-value-pair": {
      "name": "meta.key-value.taml",
      "match": "^(\\t*)(\\S+?)(\\t+)(.*)$",
      "captures": {
        "1": {
          "name": "punctuation.whitespace.leading.taml"
        },
        "2": {
          "name": "entity.name.tag.taml",
          "patterns": [
            {
              "include": "#keywords-in-keys"
            }
          ]
        },
        "3": {
          "name": "punctuation.separator.taml"
        },
        "4": {
          "name": "meta.value.taml",
          "patterns": [
            {
              "include": "#value-content"
            }
          ]
        }
      }
    },
    "parent-key": {
      "name": "meta.parent-key.taml",
      "match": "^(\\t*)(\\S+)\\s*$",
      "captures": {
        "1": {
          "name": "punctuation.whitespace.leading.taml"
        },
        "2": {
          "name": "entity.name.section.taml"
        }
      }
    },
    "list-item": {
      "name": "meta.list-item.taml",
      "match": "^(\\t+)(\\S.*)$",
      "captures": {
        "1": {
          "name": "punctuation.whitespace.leading.taml"
        },
        "2": {
          "name": "string.unquoted.taml",
          "patterns": [
            {
              "include": "#value-content"
            }
          ]
        }
      }
    },
    "value-content": {
      "patterns": [
        {
          "include": "#boolean"
        },
        {
          "include": "#null"
        },
        {
          "include": "#number"
        },
        {
          "include": "#env-variable"
        },
        {
          "include": "#string"
        }
      ]
    },
    "boolean": {
      "name": "constant.language.boolean.taml",
      "match": "\\b(true|false|yes|no|on|off)\\b"
    },
    "null": {
      "name": "constant.language.null.taml",
      "match": "\\b(null|nil|~)\\b"
    },
    "number": {
      "name": "constant.numeric.taml",
      "match": "\\b-?[0-9]+(\\.[0-9]+)?([eE][+-]?[0-9]+)?\\b"
    },
    "env-variable": {
      "name": "variable.other.environment.taml",
      "match": "\\$\\{[A-Z_][A-Z0-9_]*\\}"
    },
    "string": {
      "name": "string.unquoted.taml",
      "match": ".*"
    },
    "keywords-in-keys": {
      "patterns": [
        {
          "name": "keyword.control.taml",
          "match": "\\b(enabled|disabled|required|optional)\\b"
        }
      ]
    }
  }
}
