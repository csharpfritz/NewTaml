{
  "name": "taml-language-server",
  "displayName": "TAML Language Server",
  "description": "Language Server Protocol implementation for TAML with validation and diagnostics",
  "version": "0.1.0",
  "publisher": "taml-lang",
  "engines": {
    "vscode": "^1.75.0",
    "node": ">=16.0.0"
  },
  "categories": [
    "Programming Languages",
    "Linters"
  ],
  "keywords": [
    "taml",
    "language-server",
    "validation",
    "diagnostics"
  ],
  "main": "./client/out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "TAML",
      "properties": {
        "taml.validation.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable TAML validation"
        },
        "taml.validation.showWarnings": {
          "type": "boolean",
          "default": true,
          "description": "Show warnings in addition to errors"
        },
        "taml.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces communication between VS Code and the language server"
        }
      }
    }
  },
  "activationEvents": [
    "onLanguage:taml"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "postinstall": "cd client && npm install && cd ../server && npm install",
    "test": "npm run compile && node ./client/out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.75.0",
    "typescript": "^5.0.0",
    "vsce": "^2.15.0"
  },
  "dependencies": {}
}
